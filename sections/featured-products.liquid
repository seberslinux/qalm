{% comment %}
  Featured Products section
{% endcomment %}

<section class="py-20 px-4 md:px-6 bg-gray-50">
  <div class="container mx-auto">
    <h2 class="text-3xl font-light text-center mb-4">
      {{ section.settings.section_title | default: 'Featured Products' }}
    </h2>
    
    <p class="text-gray-600 text-center mb-12 max-w-xl mx-auto">
      {{ section.settings.section_description | default: 'Designed with sensory comfort in mind, our products feature tagless designs, flat seams, and ultra-soft fabrics.' }}
    </p>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {% if section.settings.collection != blank %}
        {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
          <div class="group">
            <div class="relative overflow-hidden mb-4">
              {% if product.featured_media %}
                <img 
                  src="{{ product.featured_media | image_url: width: 400 }}" 
                  alt="{{ product.featured_media.alt | default: product.title }}" 
                  class="w-full h-[400px] object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                >
              {% else %}
                <div class="w-full h-[400px] bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-400">No image</span>
                </div>
              {% endif %}
              
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-white bg-opacity-90 transform translate-y-full transition-transform duration-300 group-hover:translate-y-0">
                <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <button 
                    type="submit" 
                    name="add" 
                    class="w-full py-3 bg-black text-white text-sm uppercase tracking-wider hover:bg-gray-800 transition-colors"
                    {% unless product.available %}disabled{% endunless %}
                  >
                    {% if product.available %}
                      Add to Cart
                    {% else %}
                      Sold Out
                    {% endif %}
                  </button>
                </form>
              </div>
            </div>
            
            <h3 class="text-lg font-light">
              <a href="{{ product.url }}" class="hover:text-gray-600 transition-colors">
                {{ product.title }}
              </a>
            </h3>
            
            <p class="text-gray-700 mb-2">
              {% if product.price_varies %}
                From {{ product.price_min | money }}
              {% else %}
                {{ product.price | money }}
              {% endif %}
            </p>
            
            {% if product.variants.size > 1 %}
              <div class="flex gap-2 mt-2">
                {% for variant in product.variants limit: 4 %}
                  {% if variant.option1 %}
                    <div 
                      class="w-4 h-4 rounded-full border border-gray-300" 
                      style="background-color: {{ variant.option1 }}"
                      aria-label="Color: {{ variant.option1 }}"
                    ></div>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        <!-- Fallback products for demo -->
        {% assign demo_products = 'seamless-relaxed-tee,soft-touch-lounge-pants,pressure-relief-weighted-scarf,bamboo-sensory-socks' | split: ',' %}
        {% for product_handle in demo_products limit: 4 %}
          <div class="group">
            <div class="relative overflow-hidden mb-4">
              <img 
                src="https://images.unsplash.com/photo-1596755094514-f87e34085b2c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=988&q=80" 
                alt="Product image" 
                class="w-full h-[400px] object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              >
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-white bg-opacity-90 transform translate-y-full transition-transform duration-300 group-hover:translate-y-0">
                <button class="w-full py-3 bg-black text-white text-sm uppercase tracking-wider hover:bg-gray-800 transition-colors">
                  Add to Cart
                </button>
              </div>
            </div>
            <h3 class="text-lg font-light">{{ product_handle | replace: '-', ' ' | capitalize }}</h3>
            <p class="text-gray-700 mb-2">$58.00</p>
            <div class="flex gap-2 mt-2">
              <div class="w-4 h-4 rounded-full border border-gray-300" style="background-color: #E0E0E0"></div>
              <div class="w-4 h-4 rounded-full border border-gray-300" style="background-color: #C9B7A8"></div>
              <div class="w-4 h-4 rounded-full border border-gray-300" style="background-color: #000000"></div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="{{ section.settings.view_all_url | default: '/collections/all' }}" 
        class="inline-block border border-black px-8 py-3 text-sm uppercase tracking-wider hover:bg-black hover:text-white transition-colors"
      >
        {{ section.settings.view_all_text | default: 'View All Products' }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Designed with sensory comfort in mind, our products feature tagless designs, flat seams, and ultra-soft fabrics."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Button Text",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "View All Button URL"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
